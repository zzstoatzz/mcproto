{
    "name": "mcp-server-registry",
    "version": "1.0.0",
    "type": "module",
    "description": "Registry service for discovering MCP servers via AT Protocol",
    "scripts": {
        "dev:client": "vite",
        "dev:server": "bun --env-file=.env --watch src/server/index.ts",
        "dev": "concurrently \"bun run dev:client\" \"bun run dev:server\"",
        "build": "vite build",
        "start": "bun --env-file=.env run build && bun --env-file=.env run src/server/index.ts"
    },
    "dependencies": {
        "@atproto/api": "^0.12.0",
        "@atproto/lexicon": "^0.4.0",
        "@types/express": "^4.17.21",
        "express": "^4.18.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "typescript": "^5.0.0",
        "vite": "^5.1.0"
    }
}